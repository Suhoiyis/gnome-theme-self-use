{
  "include": ["modules.jsonc", "modules-dividers.jsonc"],
  "layer": "top",
  "position": "top",
  "fixed-center": true,
  "reload_style_on_change": true,

  "modules-left": [
    "niri/workspaces",
    "custom/right_div#5",
    "custom/weather",
    "niri/window",
    "custom/right_div#6",
  ],

  "modules-center": [
    "custom/left_div#3",
    "bluetooth",
    "network",
    "custom/wfrec",
    "custom/screenshot",
    "custom/left_div#2",
    "idle_inhibitor",
    "custom/colorpicker",
    "power-profiles-daemon",
    "custom/left_div#11",
    "custom/left_div#1",
    "custom/applauncher",
    "custom/right_div#1",
    "custom/right_div#11",
    "clock",
    "custom/right_div#2",
    "custom/cava",
    "mpris",
    "custom/right_div#3",
  ],

  "modules-right": [
    "custom/left_div#7",
    "custom/updates",
    "tray",
    "custom/left_div#4",
    "group/ddcutil",
    "privacy",
    "group/audio",
    "custom/left_div#8",
    "custom/sysmon",
    "battery",
    "custom/left_div#5",
    "group/powermenu",
  ],

  "custom/sysmon": {
    "exec": "~/.config/waybar/scripts/sysmon.sh",
    "interval": 1,
    "return-type": "json",
    "on-click": "missioncenter",

    "on-click-middle": "kitty --class float_term -e nvtop",
    "on-scroll-up": "sniffnet",
    "on-scroll-down": "kitty --class float_term --title 'Bandwhich Net' -e sudo bandwhich",

    "on-click-right": "gnome-system-monitor",
  },

  "mpris": {
    "format": "{player_icon}",
    "format-paused": "{status_icon}",
    "player-icons": { "default": "󰝚", "firefox": "󰈹", "spotify": "" },
    "status-icons": { "paused": "" },
    "tooltip": true,
    "tooltip-format": "{player} ({status})\n{dynamic}",
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
  },

  "custom/weather": {
    "exec": "python3 ~/.config/waybar/scripts/weather.py",
    "return-type": "json",
    "format": "{}",
    "tooltip": true,
    "interval": 3600, // 建议设置 600秒 (10分钟) 更新一次，太快会被 wttr.in 封 IP

    "on-click": "xdg-open 'https://wttr.in/Chenghua,Chengdu'",
  },
}
