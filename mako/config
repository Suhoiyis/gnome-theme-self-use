include=~/.config/mako/colors.conf

# 左键点击：打开软件/跳转链接
on-button-left=exec ~/.config/mako/niri-focus.sh
# 右键点击：关闭通知
on-button-right=dismiss


border-size=2
border-radius=8
icon-border-radius=8
icons=1
# 限制图标大小，防止某些软件发送超大图标撑爆布局
max-icon-size=48


# 限制最大宽度，防止太宽遮挡视线
width=350
# 限制最大高度，防止长文本占满屏幕 (配合 text-alignment 使用)
height=400
# 边距
margin=10
# 内边距：上下10px，左右15px (修复文字贴边问题)
padding=10,15
# 右上角显示
anchor=top-right

default-timeout=8000


font=Inter 11
history=1
max-visible=20
max-history=100

# --- 特殊层级 (Wayland 推荐) ---
# 保证通知浮在所有窗口之上 (全屏游戏除外)
layer=overlay

# --- 针对长文本的截断处理 ---
# 当文本过长时，最后显示省略号
text-alignment=left
